{
  "version": 2,
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "app/static/$1"
    },
    {
      "source": "/api/cron/scrape",
      "destination": "api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 3 * * *"
    }
  ]
}
