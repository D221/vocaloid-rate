{
  "version": 2,
  "functions": {
    "app/main.py": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/app/static/$1"
    },
    {
      "source": "/api/cron/scrape",
      "destination": "/app/main.py"
    },
    {
      "source": "/((?!static|api/cron).*)",
      "destination": "/app/main.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 3 * * *"
    }
  ]
}
