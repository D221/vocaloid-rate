{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python"
    }
  },
  "rewrites": [
    {
      "source": "/api/cron/scrape",
      "destination": "api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 3 * * *"
    }
  ]
}
