{
  "scripts": {
    "// --- CODE QUALITY ---": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "// --- TRANSLATIONS ---": "",
    "i18n:extract:py": "uv run --with \"babel[jinja2]\" pybabel extract -F babel.cfg -o locales/messages.pot .",
    "i18n:extract:js": "uv run python ./scripts/extract_js_messages.py",
    "i18n:update": "npm run i18n:extract:py && npm run i18n:extract:js && python -m babel.messages.frontend update -i locales/messages.pot -d locales",
    "i18n:compile": "python -m babel.messages.frontend compile -d locales",
    "// --- DEVELOPMENT ---": "",
    "watch:css": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/app.css --minify --watch",
    "watch:js": "chokidar \"./app/static/js/**/*.js\" -c \"npm run build:js\" --initial --ignore \"./app/static/js/**/*.min.js\"",
    "dev:api": "uv run uvicorn app.main:app --reload",
    "dev": "concurrently --prefix-colors 'cyan,magenta,green' --names 'tailwind,api,js' \"npm run watch:css\" \"npm run dev:api\" \"npm run watch:js\"",
    "changelog": "release-it --dry-run --changelog",
    "// --- PRODUCTION & RELEASE ---": "",
    "build:css": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/app.css --minify",
    "build:js": "terser ./app/static/js/main.js -o ./app/static/js/main.min.js -c -m && terser ./app/static/js/options.js -o ./app/static/js/options.min.js -c -m && terser ./app/static/js/playlist_editor.js -o ./app/static/js/playlist_editor.min.js -c -m && terser ./app/static/js/playlists_page.js -o ./app/static/js/playlists_page.min.js -c -m && terser ./app/static/js/global.js -o ./app/static/js/global.min.js -c -m",
    "build": "npm run i18n:compile && npm run build:css && npm run build:js",
    "package": "uvx pyinstaller vocaloid-rate.spec --noconfirm",
    "clean:static": "del-cli \"dist/vocaloid-rate/_internal/static/css/input.css\" \"dist/vocaloid-rate/_internal/static/js/*.js\" --ignore \"dist/vocaloid-rate/_internal/static/js/*.min.js\"",
    "release": "rimraf dist vocaloid-rate-release.zip && npm run build && npm run package && npm run clean:static && cd dist && bestzip vocaloid-rate-release.zip vocaloid-rate",
    "start": "uv run uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@tailwindcss/cli": "^4.1.14",
    "bestzip": "^2.2.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "pyinstaller": "^0.0.1",
    "release-it": "^19.0.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.14",
    "terser": "^5.44.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template",
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./app/static/css/input.css",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.js": "eslint --fix",
    "*.py": "ruff check --fix"
  }
}
